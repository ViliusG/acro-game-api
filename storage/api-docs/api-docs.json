                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PoseIndexResponse"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Poses"
                ],
                "summary": "Upload a pose to database. Will automatically have status 2 - Pending",
                "operationId": "App\\Http\\Controllers\\PoseController::post",
